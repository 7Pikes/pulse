#!/usr/bin/env ruby

unless ARGV[0] =~ /(start|stop|status)/
  puts "Usage: bin/frontend {start|stop|restart|status}"
  exit 1
end

require 'rubygems'
require 'daemons'

root_path = File.dirname(File.expand_path('../', __FILE__))

app_path = File.join(root_path, 'web.rb')
dir_path = File.join(root_path, 'tmp/daemons')

Daemons.run_proc('frontend', 
  dir_mode: :normal, 
  dir: dir_path, 
  log_output: true, 
  backtrace: true
) do
  Dir.chdir(root_path)
  exec "bundle exec ruby #{app_path} -sv"
end

